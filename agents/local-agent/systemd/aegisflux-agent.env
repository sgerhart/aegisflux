# AegisFlux Agent Environment Configuration
# Copy this file to /etc/aegisflux/agent.env and customize as needed

# Host identification
AGENT_HOST_ID=localhost

# Registry configuration
AGENT_REGISTRY_URL=http://localhost:8084

# Polling configuration
AGENT_POLL_INTERVAL_SEC=30

# NATS configuration
AGENT_NATS_URL=nats://localhost:4222

# Vault configuration
AGENT_VAULT_URL=http://localhost:8200
AGENT_VAULT_TOKEN=dev-token
AGENT_PUBLIC_KEY=

# Cache and storage
AGENT_CACHE_DIR=/tmp/aegisflux-agent

# Program limits
AGENT_MAX_PROGRAMS=10
AGENT_DEFAULT_TTL_SEC=3600

# Logging
AGENT_LOG_LEVEL=info
AGENT_TELEMETRY_SUBJECT=agent.telemetry

# Rollback thresholds
AGENT_ROLLBACK_MAX_ERRORS=10
AGENT_ROLLBACK_MAX_VIOLATIONS=100
AGENT_ROLLBACK_MAX_CPU_PERCENT=80.0
AGENT_ROLLBACK_MAX_LATENCY_MS=1000.0
AGENT_ROLLBACK_MAX_MEMORY_KB=102400
AGENT_ROLLBACK_VERIFIER_FAILURE=true
AGENT_ROLLBACK_CHECK_INTERVAL_SEC=30
AGENT_ROLLBACK_DELAY_SEC=5
